      "parameters": {
        "jsCode": "const items = [];\nconst stale_days = 3;\nconst today = new Date();\ntoday.setHours(0, 0, 0, 0);\n\nfor (const item of $input.all()) {\n  if (item.json.Status === 'Done') continue;\n  \n  const lastUpdate = new Date(item.json.LastUpdate);\n  lastUpdate.setHours(0, 0, 0, 0);\n  \n  const diffTime = today - lastUpdate;\n  const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));\n  \n  if (diffDays >= stale_days) {\n    items.push({\n      json: {\n        ...item.json,\n        stale_days: diffDays\n      }\n    });\n  }\n}\nreturn items;"
      },
